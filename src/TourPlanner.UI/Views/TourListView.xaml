<UserControl x:Class="TourPlanner.UI.Views.TourListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBox Grid.Row="0" Margin="0,0,0,8" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
    <ListBox Grid.Row="1" ItemsSource="{Binding ToursView}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedTour}"/>
  </Grid>
</UserControl>
