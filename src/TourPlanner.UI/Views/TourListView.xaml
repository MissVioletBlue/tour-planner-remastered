<UserControl x:Class="TourPlanner.UI.Views.TourListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="420">
    <UserControl.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding AddCommand}" />
        <KeyBinding Key="Delete" Command="{Binding DeleteCommand}" />
        <KeyBinding Key="F" Modifiers="Control" Command="{Binding FocusSearchCommand}" />
    </UserControl.InputBindings>

    <DockPanel LastChildFill="True" Margin="8">
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="New (Ctrl+N)" Command="{Binding AddCommand}" />
            <Button Content="Delete (Del)" Command="{Binding DeleteCommand}" Margin="8,0,0,0" />
            <Separator/>
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Margin="8,0,0,0"
                     VerticalAlignment="Center"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Search by name (Ctrl+F to focus)" />
        </ToolBar>

        <!-- List -->
        <DataGrid ItemsSource="{Binding ToursView}"
                  SelectedItem="{Binding SelectedTour}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="From" Binding="{Binding From}" Width="*" />
                <DataGridTextColumn Header="To" Binding="{Binding To}" Width="*" />
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceKm, StringFormat={}{0:F1}}" Width="*" />
                <DataGridTextColumn Header="Time" Binding="{Binding EstimatedTime, StringFormat={}{0:hh\\:mm}}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>