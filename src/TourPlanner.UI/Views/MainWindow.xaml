<Window x:Class="TourPlanner.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TourPlanner.UI.Views"
        Title="TourPlanner" Height="450" Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>            
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Title}" FontSize="20" FontWeight="Bold" />

        <!-- 
        <ListBox Grid.Row="1" ItemsSource="{Binding Tours}" DisplayMemberPath="Name" />
        -->

        <views:TourListView Grid.Row="1" Grid.Column="0" />
        <!--
        <Frame Grid.Row="1" Grid.Column="0"
               NavigationUIVisibility="Hidden"
               Source="/Views/TourListView.xaml"
                >
        </Frame>
        -->

        <!-- <Frame Grid.Row="1" Source="/Views/TourListView.xaml" NavigationUIVisibility="Hidden" />-->
        
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
               Text="Tourdetails"
               TextWrapping="Wrap"
               Margin="12,8"/>

            <TextBlock Grid.Row="1"
               Text="TourMap"
               TextWrapping="Wrap"
               Margin="12,8"/>
            
            <!--
            <ContentControl Grid.Row="0" Content="{Binding Tourdetails}"/>
            <ContentControl Grid.Row="1" Content="{Binding TourMap}"/>
                -->
        </Grid>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBox Width="250" Margin="0,0,8,0" Text="{Binding NewTourName, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Tour" Command="{Binding AddTourCommand}" />
        </StackPanel>
    </Grid>
</Window>
