<Window x:Class="TourPlanner.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TourPlanner" Height="450" Width="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" />

        <ListBox Grid.Row="1" ItemsSource="{Binding Tours}" DisplayMemberPath="Name" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBox Width="250" Margin="0,0,8,0" Text="{Binding NewTourName, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add Tour" Command="{Binding AddTourCommand}" />
        </StackPanel>
    </Grid>
</Window>
